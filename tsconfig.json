{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "typedocOptions": {
    "entryPoints": ["src/utils/validation.ts", "src/types.ts"],
    "out": "docs",
    "entryPointStrategy": "Expand",
    "plugin": ["typedoc-plugin-markdown"]
  },
  "include": ["./src/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
