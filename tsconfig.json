{
  "declaration": true,
  "lib": ["es2015"],
  "module": "commonjs",
  "moduleResolution": "node",
  "sourceMap": true,
  "strict": true,
  "target": "es5",
  "skipLibCheck": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": ["./src/**/*", "./test/**/*", "./scripts/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
